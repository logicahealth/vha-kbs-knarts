    <actionGroup>
        <behaviors>
            <behavior xsi:type="GroupSelectionBehavior" value="Any"/>
        </behaviors>
        <subElements>
            <actionGroup>
                <title value="Patient Preference for Screening"/>
                <subElements>
                    <actionGroup>
                        <title value="Patient preference for screening"/>
                        <subElements>
                            <simpleAction order="1" xsi:type="CollectInformationAction">
                                <behaviors>
                                    <behavior xsi:type="RequiredBehavior" value="Must"/>
                                </behaviors>
                                <documentationConcept>
                                    <prompt value="Preference"/>
                                    <responseDataType value="String"/>
                                    <responseCardinality value="Single"/>
                                    <responseRange xsi:type="EnumerationConstraint">
                                        <constraintType value="List"/>
                                        <item>
                                            <displayText value="Screen as recommended"/>
                                        </item>
                                        <item>
                                            <displayText
                                                value="Screen on patient-preferred interval"/>
                                        </item>
                                        <item>
                                            <displayText value="Stop Screening"/>
                                        </item>
                                    </responseRange>
                                </documentationConcept>
                                <responseBinding property="patientPreferredInterval"/>
                            </simpleAction>
                            <simpleAction order="2" xsi:type="CollectInformationAction">

                                <!-- Ask only if patient-preferred selected above -->
                                <conditions>
                                    <condition>
                                        <logic xsi:type="elm:Equal">
                                            <elm:operand xsi:type="elm:Property"
                                                path="patientPreferredInterval">
                                                <elm:source xsi:type="elm:ParameterRef"
                                                  name="Responses"/>
                                            </elm:operand>
                                            <elm:operand xsi:type="elm:Literal"
                                                value="Screen on patient-preferred interval"
                                                valueType="String"> </elm:operand>
                                        </logic>
                                        <conditionRole value="ApplicableScenario"/>
                                    </condition>
                                </conditions>
                                <documentationConcept>
                                    <prompt value="Interval (years between screening)"/>
                                    <responseDataType value="Integer"/>
                                </documentationConcept>
                            </simpleAction>
                            <simpleAction xsi:type="CollectInformationAction">
                                <documentationConcept>
                                    <prompt value="Age (years)"/>
                                    <responseDataType value="Integer"/>
                                </documentationConcept>
                                <responseBinding property="patientAge"/>
                            </simpleAction>
                            <simpleAction xsi:type="CollectInformationAction">
                                <behaviors>
                                    <behavior xsi:type="RequiredBehavior" value="Must"/>
                                </behaviors>
                                <documentationConcept>
                                    <prompt value="Postmenopausal?"/>
                                    <itemCodes>
                                        <itemCode
                                            code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                            ->(363702006 |Has focus (attribute))->[76498008 |Postmenopausal state (finding)]"
                                            codeSystem="SNOMED CT"><dt:displayName value="Postcoordinated Expression"/> </itemCode>
                                    </itemCodes>
                                    <responseDataType value="Boolean"/>
                                </documentationConcept>
                                <responseBinding property="postmenopausal"/>
                            </simpleAction>
                            <simpleAction xsi:type="CollectInformationAction">
                                <behaviors>
                                    <behavior xsi:type="RequiredBehavior" value="Must"/>
                                </behaviors>
                                <documentationConcept>
                                    <prompt value="Previously diagnosed with osteoporosis?"/>
                                    <itemCodes>
                                        <itemCode
                                            code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                            ->(363702006 |Has focus (attribute))->[64859006 |Osteoporosis (disorder)]"
                                            codeSystem="SNOMED CT">
                                            <dt:displayName value="Postcoordinated Expression"/>
                                        </itemCode>
                                    </itemCodes>
                                    <responseDataType value="Boolean"/>
                                </documentationConcept>
                            </simpleAction>
                        </subElements>
                    </actionGroup>
                </subElements>
            </actionGroup>
            <actionGroup>
                <!-- Condition on Age -->
                <conditions>
                    <condition>
                        <logic xsi:type="elm:GreaterOrEqual">
                            <elm:operand xsi:type="elm:Property" path="patientAge">
                                <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                            </elm:operand>
                            <elm:operand xsi:type="elm:Literal" value="65" valueType="Integer"
                            > </elm:operand>
                        </logic>
                        <conditionRole/>
                    </condition>
                </conditions>
                <title value="Age greater than or equal to 65 Years"/>
                <subElements>
                    <simpleAction xsi:type="CollectInformationAction">
                        <documentationConcept>
                            <prompt value="Previously undergone DXA scanning?"/>
                            <responseDataType value="Boolean"/>
                        </documentationConcept>
                        <responseBinding property="previouslyUndergoneDXAScanning"/>
                    </simpleAction>
                    <actionGroup>
                        <!-- Subbordinate actionGroup only applies if 'Previously undergone DXA scanning?' Boolean = Yes -->
                        <behaviors>
                            <behavior xsi:type="GroupSelectionBehavior" value="AtMostOne"/>
                        </behaviors>
                        <conditions>
                            <condition>
                                <logic xsi:type="elm:IsTrue">
                                    <elm:operand xsi:type="elm:Property"
                                        path="previouslyUndergoneDXAScanning">
                                        <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                                    </elm:operand>
                                </logic>
                                <conditionRole/>
                            </condition>
                        </conditions>
                        <subElements>
                            <simpleAction xsi:type="CollectInformationAction">
                                <documentationConcept>
                                    <prompt value="Last DXA scan date"/>
                                    <responseDataType value="Timestamp"/>
                                </documentationConcept>
                            </simpleAction>
                            <simpleAction xsi:type="CollectInformationAction">
                                <documentationConcept>
                                    <prompt value="Most recent T-score"/>
                                    <itemCodes>
                                        <itemCode
                                            code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                            ->(363702006 |Has focus (attribute))->[3dfd49ed-a7e4-41a5-ab44-356015e345a2 |Dual energy X-ray photon absorptiometry scan T score]"
                                            codeSystem="SNOMED CT">
                                            <dt:displayName value="Postcoordinated Expression"/>
                                        </itemCode>
                                    </itemCodes>
                                    <responseDataType value="Code"/>
                                    <responseCardinality value="Single"/>
                                    <responseRange xsi:type="EnumerationConstraint">
                                        <constraintType value="List"/>
                                        <item>
                                            <codes>
                                                <code
                                                  code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                                    ->(363702006 |Has focus (attribute))->[3dfd49ed-a7e4-41a5-ab44-356015e345a2 |Dual energy X-ray photon absorptiometry scan T score]"
                                                  codeSystem="SNOMED CT">
                                                  <dt:displayName value="Postcoordinated Expression"
                                                  />
                                                </code>
                                            </codes>
                                            <displayText value="Greater than or equal to -1.5"/>
                                        </item>
                                        <item>
                                            <codes>
                                                <code
                                                  code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                                    ->(363702006 |Has focus (attribute))->[3dfd49ed-a7e4-41a5-ab44-356015e345a2 |Dual energy X-ray photon absorptiometry scan T score]"
                                                  codeSystem="SNOMED CT"/>
                                            </codes>
                                            <displayText
                                                value="Greater than -2.0 and less than -1.5"/>
                                        </item>
                                        <item>
                                            <codes>
                                                <code
                                                  code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                                    ->(363702006 |Has focus (attribute))->[3dfd49ed-a7e4-41a5-ab44-356015e345a2 |Dual energy X-ray photon absorptiometry scan T score]"
                                                  codeSystem="SNOMED CT"/>
                                            </codes>
                                            <displayText
                                                value="Greater than or equal to -2.49 and less than or equal to -2"
                                            />
                                        </item>
                                    </responseRange>
                                </documentationConcept>
                            </simpleAction>
                        </subElements>
                    </actionGroup>
                </subElements>
            </actionGroup>
            <actionGroup>
                <!-- Condition on age and postmenopausal collected earlier -->
                <conditions>
                    <condition>
                        <logic xsi:type="elm:And">
                            <elm:operand xsi:type="elm:Less">
                                <elm:operand xsi:type="elm:Property" path="patientAge">
                                    <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                                </elm:operand>
                                <elm:operand xsi:type="elm:Literal" value="65" valueType="Integer"
                                > </elm:operand>
                            </elm:operand>
                            <elm:operand xsi:type="elm:IsTrue">
                                <elm:operand xsi:type="elm:Property" path="postmenopausal">
                                    <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                                </elm:operand>
                            </elm:operand>
                        </logic>
                        <conditionRole/>
                    </condition>
                </conditions>
                <title value="Age Less Than 65 Years and Postmenopausal"/>
                <subElements>
                    <simpleAction xsi:type="CollectInformationAction">
                        <behaviors>
                            <behavior xsi:type="RequiredBehavior" value="Must"/>
                        </behaviors>
                        <documentationConcept>
                            <prompt value="History of fragility fracture?"/>
                            <itemCodes>
                                <itemCode
                                    code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                    ->(363702006 |Has focus (attribute))->[268029009 |Pathological fracture (disorder)]"
                                    codeSystem="SNOMED CT">
                                    <dt:displayName value="Postcoordinated Expression"/>
                                </itemCode>
                            </itemCodes>
                            <responseDataType value="Boolean"/>
                        </documentationConcept>
                    </simpleAction>
                    <simpleAction xsi:type="CollectInformationAction">
                        <documentationConcept>
                            <prompt value="Body weight (pounds)"/>
                            <itemCodes>
                                <itemCode
                                    code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]-
                                    ->(363702006 |Has focus (attribute))->[107647005 |Weight finding (finding)]"
                                    codeSystem="SNOMED CT">
                                    <dt:displayName value="Postcoordinated Expression"/>
                                </itemCode>
                            </itemCodes>
                            <responseDataType value="Integer"/>
                        </documentationConcept>
                    </simpleAction>
                    <simpleAction xsi:type="CollectInformationAction">
                        <behaviors>
                            <behavior xsi:type="RequiredBehavior" value="Must"/>
                        </behaviors>
                        <documentationConcept>
                            <prompt value="Bone loss caused by medication or disease?"/>
                            <itemCodes>
                                <itemCode
                                    code="[a997cc03-3e99-40eb-833a-6374c7750a3a |Observation procedure (procedure)]
                                    ->(363702006 |Has focus (attribute))->[703264005 |Secondary osteoporosis (disorder)]"
                                    codeSystem="SNOMED CT">
                                    <dt:displayName value="Postcoordinated Expression"/>
                                </itemCode>
                            </itemCodes>
                            <responseDataType value="Boolean"/>
                        </documentationConcept>
                        <responseBinding property="boneLossCausedByMedicationOrDisease"/>
                    </simpleAction>
                    <actionGroup>
                        <conditions>
